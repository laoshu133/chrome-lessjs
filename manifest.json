{
	"manifest_version": 2,
	"version": "0.0.1",
	"name": "Chrome Lessjs",
	"description": "A Chrome plugin for less compile, like FireLESS",
	"icons": {
		"48": "images/icon_48.png",
		"128": "images/logo.png"
	},
	"page_action": {
		"default_icon": "images/icon_32.png",
		"default_title": "Chrome Lessjs",
		"default_popup": "popup.html"
	},
	"permissions": [ "tabs", "*://*/*" ],
	"background": {
		// "persistent": false,
		"scripts": ["js/background.js"]
	},
	"content_scripts": [{
		"js": [ "js/detect.js" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_end",
		"all_frames": true
	}],
	"web_accessible_resources": [ "js/lessjs_detector.js", "js/less.min.js", "js/less-1.7.3.js", "js/source-map.min.js" ]
}