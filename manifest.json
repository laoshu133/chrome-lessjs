{
	"manifest_version": 2,
	"version": "0.0.5",
	"name": "Lessjs for Google Chrome",
	"description": "A Lesscss compiler for Google Chrome, like FireLESS",
	"icons": {
		"32": "images/icon_32.png",
		"48": "images/icon_48.png",
		"128": "images/logo.png"
	},
	"page_action": {
		"default_icon": "images/icon_32.png",
		"default_title": "Lessjs for Google Chrome",
		"default_popup": "popup.html"
	},
	"permissions": [ "tabs", "*://*/*" ],
	"background": {
		"persistent": false,
		"scripts": ["js/background.js"]
	},
	"content_scripts": [{
		"js": [ "js/detect.js" ],
		"matches": [ "http://*/*", "https://*/*" ],
		"run_at": "document_end",
		"all_frames": true
	}],
	"web_accessible_resources": [ "js/lessjs_detector.js", "js/less.min.js", "js/source-map.min.js" ],
	"devtools_page": "devtools.html"
}